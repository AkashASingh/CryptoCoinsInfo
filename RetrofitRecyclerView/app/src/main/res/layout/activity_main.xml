<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/CryptoCoinsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="List of CryptoCurrency Coins"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:padding="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CryptoCoinsTV"
        tools:listitem="@layout/itemview" />


</androidx.constraintlayout.widget.ConstraintLayout>

<TextView
android:id="@+id/serialTextView"
android:layout_height="wrap_content"
android:layout_width="wrap_content"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintLeft_toLeftOf="parent"
android:text="1"
android:textColor="@color/black"
android:layout_margin="20dp"
android:padding="10dp"
android:textStyle="bold"
    />

<TextView
android:id="@+id/coinNamesTextView"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="20dp"
android:padding="10dp"
android:text="CryptoCoin"
android:textColor="#020930"
android:textStyle="bold"
app:layout_constraintLeft_toRightOf="@id/serialTextView"
app:layout_constraintTop_toTopOf="parent" />

<TextView
android:id="@+id/coinSymbolTV"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="20dp"
android:padding="10dp"
android:text="Symbol"
android:textStyle="bold"
android:textColor="#020930"
app:layout_constraintLeft_toRightOf="@id/coinNamesTextView"
app:layout_constraintRight_toLeftOf="@id/isActiveTextView"
app:layout_constraintTop_toTopOf="parent" />

<TextView
android:id="@+id/isActiveTextView"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginTop="20dp"
android:layout_marginLeft="25dp"
android:padding="10dp"
android:text="IsActive"
android:textColor="#0CC514"
android:textStyle="bold"
app:layout_constraintRight_toRightOf="parent"
app:layout_constraintTop_toTopOf="parent"


    />