<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/serialTextView"
            android:layout_height="wrap_content"
             android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="1"
            android:textColor="@color/black"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:textStyle="bold"
            />

    <TextView
        android:id="@+id/coinNamesTextView"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:text="CryptoCoin"
        android:textColor="#020930"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/serialTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/coinSymbolTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:text="Symbol"
        android:textStyle="bold"
        android:textColor="#020930"
        app:layout_constraintLeft_toRightOf="@id/coinNamesTextView"
        app:layout_constraintRight_toLeftOf="@id/isActiveTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/isActiveTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="IsActive"
        android:textColor="#0CC514"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    />

</androidx.cardview.widget.CardView>